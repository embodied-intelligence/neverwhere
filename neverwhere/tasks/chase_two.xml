<mujoco model="go1 scene">
  <include file="go1/gabe_go1.xml"/>
  <option timestep="0.005"/>
  <statistic center="0 0 0.1" extent="0.8"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <global azimuth="-130" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" file="assets/sky/desert.png" gridsize="3 4" gridlayout=".U..LFRB.D.."/>
    <texture type="2d" name="groundplane" file="assets/ground/grass.png"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="1 1" reflectance="0.2"/>
    <material name="red_ball" rgba="1 0 0 1"/>
    <material name="blue_ball" rgba="0 0 1 1"/>
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="50 50 0.05" type="plane" material="groundplane"/>
    <body name="ball" pos="10 0 1" mocap="true">
      <geom name="ball" type="sphere" size="0.15" rgba="1 0 0 1"/>
    </body>
    <body name="ball_2" pos="10 0 2" mocap="true">
      <geom name="ball_2" type="sphere" size="0.15" rgba="0 0 1 1"/>
    </body>

  </worldbody>
</mujoco>
